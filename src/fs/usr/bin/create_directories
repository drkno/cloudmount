#!/bin/bash

CONFIG_DIR='/config'
MOUNT_DIR='/mount'

LOG_DIR="${CONFIG_DIR}/log"
DB_DIR="${CONFIG_DIR}/db"
INTERMEDIATE_DIR="${CONFIG_DIR}/intermediate_mounts"

PLEXDRIVE_MOUNT="${INTERMEDIATE_DIR}/plexdrive"
PLEXDRIVE_DECRYPT_MOUNT="${PLEXDRIVE_MOUNT}_decrypt"

RCLONE_MOUNT="${INTERMEDIATE_DIR}/rclone"

if [ ! -d "${MOUNT_DIR}" ]; then
    mkdir -p "${MOUNT_DIR}"
fi
if [ ! -d "${PLEXDRIVE_MOUNT}" ]; then
    mkdir -p "${PLEXDRIVE_MOUNT}"
fi
if [ ! -d "${PLEXDRIVE_DECRYPT_MOUNT}" ]; then
    mkdir -p "${PLEXDRIVE_DECRYPT_MOUNT}"
fi
if [ ! -d "${RCLONE_MOUNT}" ]; then
    mkdir -p "${RCLONE_MOUNT}"
fi

if [ ! -d "${DB_DIR}" ]; then
	mkdir -p "${DB_DIR}"
fi
if [ ! -d "${LOG_DIR}" ]; then
	mkdir -p "${LOG_DIR}"
fi
